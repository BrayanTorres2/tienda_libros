<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E3E3"
    tools:context=".agregar_boton">

    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="609dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/view_backImage_agregar"
            android:layout_width="50dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/devolver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back"
            tools:ignore="VectorDrawableCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/text_codigo_agregar"
                android:layout_width="317dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_imput_redondeo"
                android:drawableStart="@drawable/ic_baseline_code_24"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Codigo"
                android:inputType="number"
                android:paddingLeft="10dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/text_nombre_agregar"
                android:layout_width="317dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_imput_redondeo"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:paddingLeft="50dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/text_autor_agregar"
                android:layout_width="317dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_imput_redondeo"
                android:ems="10"
                android:hint="Autor"
                android:inputType="textPersonName"
                android:paddingLeft="50dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/text_editorial_agregar"
                android:layout_width="317dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_imput_redondeo"
                android:ems="10"
                android:hint="editorial"
                android:inputType="textPersonName"
                android:paddingLeft="50dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/text_paginas_agregar"
                android:layout_width="317dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_imput_redondeo"
                android:ems="10"
                android:hint="número paginas"
                android:inputType="number"
                android:paddingLeft="50dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/text_fecha_publicacion_agregar"
                android:layout_width="317dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_imput_redondeo"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:hint="fecha de publicación"
                android:paddingLeft="50dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="29dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bn_agregar_agregar"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:background="@drawable/botones_redondos"

                android:text="Agregar" />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>